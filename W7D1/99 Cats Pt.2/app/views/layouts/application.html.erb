<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineKittehs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% if logged_in? %>
      <h2>Welcome to 99 kittehs XD! Meow... purrr. milk <%= current_user.username %></h2>
      <form action="<%= session_url %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Logout">
      </form>
    <% else %>
      <a href="<%= new_user_url %>">Sign up for 99 kittehs</a>
      <a href="<%= new_session_url %>">Sign in to 99 kittehs</a>
    <% end %>
    <%= yield %>
  </body>
</html>
